<% title @ad.title %>

<p>
  <%= @ad.description %>
</p>

<div class="form-actions">
  <%= link_to 'Back', ads_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_ad_path(@ad), :class => 'btn' if can? :edit, @ad %>
  <%= link_to 'Delete', ad_path(@ad), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' if can? :destroy, @ad %>
</div>
